<h1>Usuarios</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Data nascimento</th>
      <th>Cpf</th>
      <th>Senha</th>
      <th>Nome mae</th>
      <th>Telefone</th>
      <th>Email</th>
      <th>Endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usuarios.each do |usuario| %>
      <tr>
        <td><%= usuario.nome %></td>
        <td><%= usuario.data_nascimento %></td>
        <td><%= usuario.cpf %></td>
        <td><%= usuario.senha %></td>
        <td><%= usuario.nome_mae %></td>
        <td><%= usuario.telefone %></td>
        <td><%= usuario.email %></td>
        <td><%= usuario.endereco_id %></td>
        <td><%= link_to 'Mostrar', usuario %></td>
        <td><%= link_to 'Editar', edit_usuario_path(usuario) %></td>
        <td><%= link_to 'Apagar', usuario, method: :delete, data: { confirm: 'VocÃª tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

